@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            background: #fff;
            padding: 40px;
            border-radius: 5px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 20px;
            height: 45px;
        }

        .btn-login {
            border-radius: 20px;
            padding: 12px 0;
            font-size: 16px;
            font-weight: bold;
        }

        .forgot-password {
            text-align: right;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="container login-container">
        <h2>Login</h2>
        <form id="account" method="post" class="login100-form validate-form p-l-55 p-r-55 p-t-178">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" type="text" autocomplete="username" aria-required="true" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="login-submit" type="submit" class="btn btn-primary btn-block btn-login">Sign in</button>
            </div>
            <div class="form-group forgot-password">
                <a href="#">Forgot your password?</a>
            </div>
        </form>
    </div>

</body>
</html>
